<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="refreshColor"
            type="Integer" />

        <variable
            name="refreshing"
            type="Boolean" />

        <variable
            name="refreshListener"
            type="androidx.swiperefreshlayout.widget.SwipeRefreshLayout.OnRefreshListener" />

        <variable
            name="adapter"
            type="androidx.recyclerview.widget.ConcatAdapter" />

        <variable
            name="itemClick"
            type="com.kuky.demo.wan.android.base.OnItemClickListener" />

        <variable
            name="itemLongClick"
            type="com.kuky.demo.wan.android.base.OnItemLongClickListener" />

        <variable
            name="holder"
            type="com.kuky.demo.wan.android.ui.system.KnowledgeSystemFragment" />

        <variable
            name="errorStatus"
            type="Boolean" />

        <variable
            name="emptyStatus"
            type="Boolean" />

        <variable
            name="loadingStatus"
            type="Boolean" />

        <variable
            name="errorReload"
            type="com.kuky.demo.wan.android.ui.widget.ErrorReload" />

        <variable
            name="gesture"
            type="com.kuky.demo.wan.android.base.DoubleClickListener" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        bind:refreshColor="@{refreshColor}"
        bind:refreshListener="@{refreshListener}"
        bind:refreshState="@{refreshing}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/page_out_background">

            <LinearLayout
                android:id="@+id/system_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_title_bg"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                bind:gesture="@{gesture}">

                <TextView
                    android:id="@+id/system_first"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent"
                    tools:text="开发环境" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_arrow_drop_down_accent_24dp" />

                <TextView
                    android:id="@+id/system_sec"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent"
                    tools:text="Android Studio相关" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/project_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:scrollbarThumbVertical="@drawable/custom_scroll_bar"
                android:scrollbars="vertical"
                android:visibility="@{errorStatus || emptyStatus || loadingStatus ? View.GONE : View.VISIBLE}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/system_type"
                bind:adapter="@{adapter}"
                bind:hasFixedSize="@{true}"
                bind:pagingItemClick="@{itemClick}"
                bind:pagingItemLongClick="@{itemLongClick}"
                tools:itemCount="20"
                tools:listitem="@layout/recycler_wx_chapter_list" />

            <com.kuky.demo.wan.android.ui.widget.StatusError
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="@{errorStatus ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/system_type"
                bind:reload="@{errorReload}" />

            <com.kuky.demo.wan.android.ui.widget.StatusLoading
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="@{loadingStatus ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/system_type" />

            <com.kuky.demo.wan.android.ui.widget.StatusEmpty
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="@{emptyStatus ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/system_type" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>